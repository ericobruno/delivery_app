<div class="card">
  <div class="card-body">
    <h2 class="card-title"><%= @product.name %></h2>
    <h6 class="card-subtitle mb-2 text-muted">R$ <%= number_to_currency(@product.price, unit: '', separator: ',', delimiter: '.') %></h6>
    <p class="card-text"><%= @product.description %></p>
    <div class="mt-3">
      <%= link_to 'Editar', edit_admin_product_path(@product), class: 'btn btn-outline-primary' %>
      <%= link_to 'Excluir', admin_product_path(@product), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-outline-danger' %>
      <%= link_to 'Voltar', admin_products_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
