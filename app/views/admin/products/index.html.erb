<div class="d-flex justify-content-between align-items-center mb-3">
  <h1>Produtos</h1>
  <%= link_to 'Novo Produto', new_admin_product_path, class: 'btn btn-primary' %>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Categoria</th>
      <th>Pre√ßo</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr id="product_<%= product.id %>">
        <td><%= product.name %></td>
        <td><%= product.category&.name || '-' %></td>
        <td>R$ <%= number_to_currency(product.price, unit: '', separator: ',', delimiter: '.') %></td>
        <td>
          <%= link_to 'Ver', admin_product_path(product), class: 'btn btn-sm btn-outline-secondary' %>
          <%= link_to 'Editar', edit_admin_product_path(product), class: 'btn btn-sm btn-outline-primary' %>
          <%= link_to 'Excluir', confirm_destroy_admin_product_path(product), data: { turbo_frame: 'modal' }, class: 'btn btn-sm btn-outline-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<turbo-frame id="modal"></turbo-frame>
