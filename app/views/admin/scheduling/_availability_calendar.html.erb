<div class="card shadow-sm">
  <div class="card-header bg-info text-white">
    <h6 class="card-title mb-0">
      <i class="fas fa-calendar-week"></i>
      Calendário de Disponibilidade
    </h6>
  </div>
  <div class="card-body">
    <div class="row">
      <% (0..6).each do |day_offset| %>
        <% date = Date.current + day_offset.days %>
        <% day_name = date.strftime('%A').downcase %>
        <% availability = @availability.find { |a| a.day_of_week == day_name } %>
        
        <div class="col-md-6 col-lg-4 mb-3">
          <div class="card h-100">
            <div class="card-header <%= day_offset == 0 ? 'bg-primary text-white' : 'bg-light' %>">
              <h6 class="card-title mb-0">
                <i class="fas fa-calendar-day"></i>
                <%= date.strftime('%A, %d/%m') %>
                <% if day_offset == 0 %>
                  <span class="badge bg-light text-dark">Hoje</span>
                <% end %>
              </h6>
            </div>
            <div class="card-body">
              <% if availability&.available_slots&.any? %>
                <div class="row">
                  <% availability.available_slots.each do |slot| %>
                    <div class="col-4 mb-2">
                      <span class="badge bg-success">
                        <i class="fas fa-clock"></i>
                        <%= slot %>
                      </span>
                    </div>
                  <% end %>
                </div>
                <small class="text-muted">
                  <i class="fas fa-check-circle"></i>
                  <%= availability.available_slots.count %> horários disponíveis
                </small>
              <% else %>
                <div class="text-center text-muted">
                  <i class="fas fa-times-circle fa-2x mb-2"></i>
                  <p class="mb-0">Nenhum horário disponível</p>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>