<div class="container-fluid">
  <!-- Header -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <h1 class="h3 mb-0">
          <i class="fas fa-calendar-alt text-primary"></i>
          Configurações de Agendamento
        </h1>
        <div>
          <%= link_to admin_orders_path, class: 'btn btn-outline-secondary' do %>
            <i class="fas fa-arrow-left"></i> Voltar aos Pedidos
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Flash Messages -->
  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <i class="fas fa-check-circle"></i>
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% end %>

  <% if alert %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <i class="fas fa-exclamation-triangle"></i>
      <%= alert %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% end %>

  <!-- Estatísticas -->
  <div class="row mb-4">
    <div class="col-12">
      <%= render 'statistics' %>
    </div>
  </div>

  <!-- Notificações -->
  <div class="row mb-4">
    <div class="col-12">
      <%= render 'notifications' %>
    </div>
  </div>

  <!-- Configurações Gerais -->
  <div class="row">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h5 class="card-title mb-0">
            <i class="fas fa-cog"></i>
            Configurações Gerais de Agendamento
          </h5>
        </div>
        <div class="card-body">
          <%= form_with model: @configuration, url: admin_scheduling_update_configuration_path, method: :patch, local: true do |form| %>
            
            <!-- 1. Aceitar Agendamento -->
            <div class="row mb-4">
              <div class="col-md-6">
                <div class="form-check form-switch">
                  <%= form.check_box :scheduling_enabled, class: "form-check-input", id: "scheduling_enabled" %>
                  <%= form.label :scheduling_enabled, class: "form-check-label fw-bold" do %>
                    <i class="fas fa-toggle-on text-success"></i>
                    Aceitar Agendamento
                  <% end %>
                </div>
                <small class="form-text text-muted">
                  <i class="fas fa-info-circle"></i>
                  Permite que os clientes agendem pedidos para entrega ou retirada
                </small>
              </div>
              <div class="col-md-6">
                <div class="alert alert-info">
                  <i class="fas fa-lightbulb"></i>
                  <strong>Status Atual:</strong>
                  <% if @configuration.scheduling_enabled? %>
                    <span class="badge bg-success">Ativado</span>
                  <% else %>
                    <span class="badge bg-secondary">Desativado</span>
                  <% end %>
                </div>
              </div>
            </div>

            <!-- 2. Disponibilidade do Agendamento -->
            <div class="row mb-4">
              <div class="col-md-6">
                <%= form.label :max_days_ahead, class: 'form-label fw-bold' do %>
                  <i class="fas fa-calendar-plus"></i>
                  Dias à frente para agendamento
                <% end %>
                <%= form.number_field :max_days_ahead, class: "form-control", min: 1, max: 365 %>
                <small class="form-text text-muted">
                  <i class="fas fa-info-circle"></i>
                  Quantos dias à frente o cliente pode agendar (máximo 365 dias)
                </small>
              </div>
              <div class="col-md-6">
                <div class="card bg-light">
                  <div class="card-body">
                    <h6 class="card-title">
                      <i class="fas fa-calendar-check"></i>
                      Janela de Agendamento
                    </h6>
                    <p class="card-text">
                      <strong>Hoje:</strong> <%= Date.current.strftime("%d/%m/%Y") %><br>
                      <strong>Até:</strong> <%= (Date.current + @configuration.max_days_ahead.days).strftime("%d/%m/%Y") %>
                    </p>
                  </div>
                </div>
              </div>
            </div>

            <!-- 3. Agendamento para o Mesmo Dia -->
            <div class="row mb-4">
              <div class="col-md-6">
                <div class="form-check form-switch">
                  <%= form.check_box :same_day_scheduling_enabled, class: "form-check-input", id: "same_day_scheduling_enabled" %>
                  <%= form.label :same_day_scheduling_enabled, class: "form-check-label fw-bold" do %>
                    <i class="fas fa-clock"></i>
                    Permitir Agendamento para o Mesmo Dia
                  <% end %>
                </div>
                <small class="form-text text-muted">
                  <i class="fas fa-info-circle"></i>
                  Permite que clientes agendem para hoje
                </small>
              </div>
              <div class="col-md-6">
                <%= form.label :same_day_intervals, class: 'form-label fw-bold' do %>
                  <i class="fas fa-hourglass-half"></i>
                  Intervalos para o mesmo dia
                <% end %>
                <%= form.select :same_day_intervals, 
                    options_for_select([
                      ['1 intervalo', 1],
                      ['2 intervalos', 2],
                      ['3 intervalos', 3],
                      ['4 intervalos', 4],
                      ['5 intervalos', 5]
                    ], @configuration.same_day_intervals), 
                    {}, class: "form-select" %>
              </div>
            </div>

            <!-- 4. Agendamento com Estabelecimento Fechado -->
            <div class="row mb-4">
              <div class="col-md-6">
                <div class="form-check form-switch">
                  <%= form.check_box :closed_store_scheduling_enabled, class: "form-check-input", id: "closed_store_scheduling_enabled" %>
                  <%= form.label :closed_store_scheduling_enabled, class: "form-check-label fw-bold" do %>
                    <i class="fas fa-door-open"></i>
                    Permitir Agendamento com Estabelecimento Fechado
                  <% end %>
                </div>
                <small class="form-text text-muted">
                  <i class="fas fa-info-circle"></i>
                  Permite agendamento fora do horário de funcionamento
                </small>
              </div>
              <div class="col-md-6">
                <div class="alert alert-warning">
                  <i class="fas fa-exclamation-triangle"></i>
                  <strong>Atenção:</strong> Esta opção pode gerar pedidos para horários fora do expediente normal.
                </div>
              </div>
            </div>

            <!-- 5. Modo Aceite -->
            <div class="row mb-4">
              <div class="col-md-6">
                <%= form.label :acceptance_mode, class: 'form-label fw-bold' do %>
                  <i class="fas fa-hand-paper"></i>
                  Modo de Aceite
                <% end %>
                <div class="form-check">
                  <%= form.radio_button :acceptance_mode, 'manual', class: "form-check-input" %>
                  <%= form.label :acceptance_mode_manual, class: "form-check-label" do %>
                    <i class="fas fa-user-check"></i>
                    Manual
                  <% end %>
                  <small class="form-text text-muted d-block">Pedido deve ser aceito manualmente</small>
                </div>
                <div class="form-check">
                  <%= form.radio_button :acceptance_mode, 'automatic', class: "form-check-input" %>
                  <%= form.label :acceptance_mode_automatic, class: "form-check-label" do %>
                    <i class="fas fa-robot"></i>
                    Automático
                  <% end %>
                  <small class="form-text text-muted d-block">Pedido é aceito automaticamente</small>
                </div>
              </div>
              <div class="col-md-6">
                <div class="card bg-light">
                  <div class="card-body">
                    <h6 class="card-title">
                      <i class="fas fa-info-circle"></i>
                      Modo Atual
                    </h6>
                    <p class="card-text">
                      <% if @configuration.acceptance_mode == 'automatic' %>
                        <span class="badge bg-success">
                          <i class="fas fa-robot"></i> Automático
                        </span>
                      <% else %>
                        <span class="badge bg-primary">
                          <i class="fas fa-user-check"></i> Manual
                        </span>
                      <% end %>
                    </p>
                  </div>
                </div>
              </div>
            </div>

            <!-- 6. Intervalo de Tempo -->
            <div class="row mb-4">
              <div class="col-md-4">
                <%= form.label :time_unit, class: 'form-label fw-bold' do %>
                  <i class="fas fa-stopwatch"></i>
                  Unidade de Tempo
                <% end %>
                <%= form.select :time_unit, 
                    options_for_select([
                      ['Minuto', 'minute'],
                      ['Hora', 'hour']
                    ], @configuration.time_unit), 
                    {}, class: "form-select" %>
              </div>
              <div class="col-md-4">
                <%= form.label :time_interval, class: 'form-label fw-bold' do %>
                  <i class="fas fa-clock"></i>
                  Intervalo de Tempo
                <% end %>
                <%= form.number_field :time_interval, class: "form-control", min: 1 %>
                <small class="form-text text-muted">
                  Intervalo entre os horários disponíveis
                </small>
              </div>
              <div class="col-md-4">
                <div class="card bg-light">
                  <div class="card-body">
                    <h6 class="card-title">
                      <i class="fas fa-calculator"></i>
                      Intervalo Calculado
                    </h6>
                    <p class="card-text">
                      <strong><%= @configuration.time_interval_in_minutes %> minutos</strong>
                    </p>
                  </div>
                </div>
              </div>
            </div>

            <!-- 7. Cancelamento de Pedido -->
            <div class="row mb-4">
              <div class="col-md-4">
                <%= form.label :cancellation_unit, class: 'form-label fw-bold' do %>
                  <i class="fas fa-ban"></i>
                  Unidade para Cancelamento
                <% end %>
                <%= form.select :cancellation_unit, 
                    options_for_select([
                      ['Horas', 'hour'],
                      ['Dias', 'day']
                    ], @configuration.cancellation_unit), 
                    {}, class: "form-select" %>
              </div>
              <div class="col-md-4">
                <%= form.label :cancellation_value, class: 'form-label fw-bold' do %>
                  <i class="fas fa-hourglass-end"></i>
                  Tempo para Cancelamento
                <% end %>
                <%= form.number_field :cancellation_value, class: "form-control", min: 1 %>
                <small class="form-text text-muted">
                  Tempo antes da entrega que o cancelamento é permitido
                </small>
              </div>
              <div class="col-md-4">
                <div class="card bg-light">
                  <div class="card-body">
                    <h6 class="card-title">
                      <i class="fas fa-clock"></i>
                      Prazo de Cancelamento
                    </h6>
                    <p class="card-text">
                      <strong><%= @configuration.cancellation_time_in_hours %> horas</strong>
                    </p>
                  </div>
                </div>
              </div>
            </div>

            <!-- 8. Passar Pedido para Produção -->
            <div class="row mb-4">
              <div class="col-md-4">
                <%= form.label :production_unit, class: 'form-label fw-bold' do %>
                  <i class="fas fa-industry"></i>
                  Unidade para Produção
                <% end %>
                <%= form.select :production_unit, 
                    options_for_select([
                      ['Minutos', 'minute'],
                      ['Horas', 'hour']
                    ], @configuration.production_unit), 
                    {}, class: "form-select" %>
              </div>
              <div class="col-md-4">
                <%= form.label :production_value, class: 'form-label fw-bold' do %>
                  <i class="fas fa-timer"></i>
                  Tempo para Produção
                <% end %>
                <%= form.number_field :production_value, class: "form-control", min: 1 %>
                <small class="form-text text-muted">
                  Tempo antes do horário agendado que o pedido deve ir para produção
                </small>
              </div>
              <div class="col-md-4">
                <div class="card bg-light">
                  <div class="card-body">
                    <h6 class="card-title">
                      <i class="fas fa-calculator"></i>
                      Tempo de Produção
                    </h6>
                    <p class="card-text">
                      <strong><%= @configuration.production_time_in_hours %> horas</strong>
                    </p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Botões de Ação -->
            <div class="row">
              <div class="col-12">
                <hr>
                <div class="d-flex justify-content-between">
                  <%= form.submit "💾 Salvar Configurações", class: "btn btn-primary btn-lg" %>
                  <%= link_to "🔄 Recarregar", admin_scheduling_index_path, class: "btn btn-outline-secondary" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Disponibilidade de Horários -->
  <div class="row mt-4">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
          <h5 class="card-title mb-0">
            <i class="fas fa-calendar-week"></i>
            Disponibilidade de Horários por Dia da Semana
          </h5>
        </div>
        <div class="card-body">
          <%= form_with url: admin_scheduling_update_availability_path, method: :patch, local: true do |form| %>
            <div class="table-responsive">
              <table class="table table-bordered table-hover">
                <thead class="table-dark">
                  <tr>
                    <th style="width: 120px;">Dia da Semana</th>
                    <% SchedulingAvailability::TIME_SLOTS.each do |slot| %>
                      <th class="text-center" style="width: 60px;">
                        <small><%= slot %></small>
                      </th>
                    <% end %>
                  </tr>
                </thead>
                <tbody>
                  <% @availability.each do |availability| %>
                    <tr>
                      <td class="fw-bold">
                        <i class="fas fa-calendar-day"></i>
                        <%= availability.day_of_week.humanize %>
                      </td>
                      <% SchedulingAvailability::TIME_SLOTS.each do |slot| %>
                        <td class="text-center">
                          <div class="form-check">
                            <%= form.check_box "availability[#{availability.day_of_week}][]", 
                                { 
                                  checked: availability.available_slots.include?(slot),
                                  class: "form-check-input"
                                }, 
                                slot, 
                                nil %>
                          </div>
                        </td>
                      <% end %>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            
            <div class="mt-3">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <button type="button" class="btn btn-outline-primary btn-sm" onclick="selectAll()">
                    <i class="fas fa-check-square"></i> Selecionar Todos
                  </button>
                  <button type="button" class="btn btn-outline-secondary btn-sm" onclick="deselectAll()">
                    <i class="fas fa-square"></i> Desmarcar Todos
                  </button>
                </div>
                <%= form.submit "💾 Salvar Disponibilidade", class: "btn btn-success" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Ações -->
  <div class="row mt-4">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
          <h5 class="card-title mb-0">
            <i class="fas fa-tools"></i>
            Ações do Sistema
          </h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <div class="card bg-light">
                <div class="card-body">
                  <h6 class="card-title">
                    <i class="fas fa-arrow-right"></i>
                    Mover Pedidos para Produção
                  </h6>
                  <p class="card-text">
                    Move automaticamente pedidos agendados que devem ir para produção.
                  </p>
                  <%= link_to admin_scheduling_move_orders_to_production_path, 
                      method: :post, 
                      class: "btn btn-warning",
                      data: { 
                        confirm: "Tem certeza que deseja mover os pedidos agendados para produção?",
                        turbo: false
                      } do %>
                    <i class="fas fa-cogs"></i> Executar Agora
                  <% end %>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="card bg-light">
                <div class="card-body">
                  <h6 class="card-title">
                    <i class="fas fa-chart-bar"></i>
                    Estatísticas
                  </h6>
                  <p class="card-text">
                    <strong>Pedidos Agendados:</strong> <%= Order.where.not(scheduled_for: nil).count %><br>
                    <strong>Em Produção:</strong> <%= Order.where(status: 'producao').count %><br>
                    <strong>Configuração Ativa:</strong> 
                    <% if @configuration.scheduling_enabled? %>
                      <span class="badge bg-success">Sim</span>
                    <% else %>
                      <span class="badge bg-secondary">Não</span>
                    <% end %>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Calendário de Disponibilidade -->
<div class="row mt-4">
  <div class="col-12">
    <%= render 'availability_calendar' %>
  </div>
</div>

<script>
function selectAll() {
  document.querySelectorAll('input[type="checkbox"]').forEach(checkbox => {
    checkbox.checked = true;
  });
}

function deselectAll() {
  document.querySelectorAll('input[type="checkbox"]').forEach(checkbox => {
    checkbox.checked = false;
  });
}
</script>