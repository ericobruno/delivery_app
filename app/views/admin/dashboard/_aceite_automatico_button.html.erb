<!-- TOGGLE SWITCH - ACEITE AUTOM√ÅTICO -->
<!-- ESTADO ATUAL: <%= Setting.aceite_automatico? ? 'ON' : 'OFF' %> -->

<style>
  .aceite-automatico-container {
    max-width: 500px;
  }
  
  .form-switch-lg .form-check-input {
    width: 3rem;
    height: 1.5rem;
    border-radius: 1rem;
    background-color: #6c757d;
    border: none;
    transition: all 0.3s ease;
    cursor: pointer;
    position: relative;
  }
  
  .form-switch-lg .form-check-input:checked {
    background-color: #198754;
    border-color: #198754;
  }
  
  .form-switch-lg .form-check-input:focus {
    border-color: #86b7fe;
    outline: 0;
    box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
  }
  
  .form-switch-lg .form-check-input:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }
  
  .toggle-label {
    cursor: pointer;
    margin-left: 0.5rem;
    font-weight: 600;
    font-size: 0.875rem;
    user-select: none;
  }
  
  .toggle-text {
    transition: color 0.3s ease;
    font-weight: 700;
    letter-spacing: 0.5px;
  }
  
  .form-check-input:checked + .toggle-label .toggle-text {
    color: #198754;
  }
  
  .form-check-input:not(:checked) + .toggle-label .toggle-text {
    color: #6c757d;
  }
  
  .aceite-automatico-container .card {
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
    border: 1px solid rgba(0,0,0,0.08);
  }
  
  .aceite-automatico-container .card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
  }
  
  .loading-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(255, 255, 255, 0.95);
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 0.375rem;
    z-index: 10;
    backdrop-filter: blur(2px);
  }
  
  .toggle-switch {
    transform: scale(1.2);
    transition: transform 0.2s ease;
  }
  
  .toggle-switch:hover:not(:disabled) {
    transform: scale(1.3);
  }
  
  @keyframes switchAnimation {
    0% { transform: scale(1.2); }
    50% { transform: scale(1.4); }
    100% { transform: scale(1.2); }
  }
  
  .toggle-switch.animating {
    animation: switchAnimation 0.3s ease;
  }
</style>

<div class="aceite-automatico-container" 
     data-controller="aceite-automatico" 
     data-aceite-automatico-url-value="<%= admin_toggle_aceite_automatico_path %>"
     data-aceite-automatico-current-status-value="<%= Setting.aceite_automatico? ? 'on' : 'off' %>">
  
  <div class="card border-0 shadow-sm">
    <div class="card-body p-4">
      <div class="row align-items-center">
        <div class="col-md-8">
          <div class="d-flex align-items-center mb-2">
            <i class="fas fa-bolt text-warning me-2 fs-4"></i>
            <h6 class="mb-0 fw-bold">Aceite Autom√°tico</h6>
            <span class="badge ms-2 <%= Setting.aceite_automatico? ? 'bg-success' : 'bg-secondary' %>">
              <%= Setting.aceite_automatico? ? 'ATIVO' : 'INATIVO' %>
            </span>
          </div>
          <p class="text-muted small mb-0">
            <%= Setting.aceite_automatico? ? 'Novos pedidos s√£o aceitos automaticamente' : 'Novos pedidos aguardam aprova√ß√£o manual' %>
          </p>
        </div>
        <div class="col-md-4 text-end">
          <!-- TOGGLE SWITCH -->
          <div class="form-check form-switch form-switch-lg">
            <input class="form-check-input toggle-switch" 
                   type="checkbox" 
                   role="switch" 
                   id="aceiteAutomaticoSwitch"
                   data-aceite-automatico-target="toggle"
                   data-action="change->aceite-automatico#handleToggle"
                   <%= Setting.aceite_automatico? ? 'checked' : '' %>>
            <label class="form-check-label toggle-label" for="aceiteAutomaticoSwitch">
              <span class="toggle-text">
                <%= Setting.aceite_automatico? ? 'ON' : 'OFF' %>
              </span>
            </label>
          </div>
        </div>
      </div>
      
      <!-- Loading indicator -->
      <div class="loading-overlay d-none" data-aceite-automatico-target="loading">
        <div class="spinner-border spinner-border-sm text-primary" role="status">
          <span class="visually-hidden">Carregando...</span>
        </div>
        <span class="ms-2 text-primary">Atualizando...</span>
      </div>
    </div>
  </div>
</div>

