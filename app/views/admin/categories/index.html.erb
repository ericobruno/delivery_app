<div class="d-flex justify-content-between align-items-center mb-3">
  <h1>Categorias</h1>
  <%= link_to 'Nova Categoria', new_admin_category_path, class: 'btn btn-primary' %>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>
          <%= link_to 'Ver', admin_category_path(category), class: 'btn btn-sm btn-outline-secondary' %>
          <%= link_to 'Editar', edit_admin_category_path(category), class: 'btn btn-sm btn-outline-primary' %>
          <%= link_to 'Excluir', admin_category_path(category), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-sm btn-outline-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
