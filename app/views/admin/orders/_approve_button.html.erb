<turbo-frame id="approve-order-<%= order.id %>">
  <% if order.status == 'ag_aprovacao' %>
    <div data-controller="order-actions"
         data-order-actions-url-value="<%= accept_admin_order_path(order) %>"
         data-order-actions-order-id-value="<%= order.id %>"
         data-order-actions-current-status-value="<%= order.status %>">
      
      <%= button_to 'Aprovar', 
                    accept_admin_order_path(order), 
                    method: :post, 
                    class: 'btn btn-success btn-sm',
                    data: { 
                      order_actions_target: "button",
                      action: "click->order-actions#approve"
                    } %>
    </div>
  <% else %>
    <span class="text-success fw-bold">âœ“ Aprovado</span>
  <% end %>
</turbo-frame> 