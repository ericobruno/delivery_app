<div class="d-flex justify-content-between align-items-center mb-3">
  <h1>Clientes</h1>
  <%= link_to 'Novo Cliente', new_admin_customer_path, class: 'btn btn-primary' %>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Telefone</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.phone %></td>
        <td>
          <%= link_to 'Ver', admin_customer_path(customer), class: 'btn btn-sm btn-outline-secondary' %>
          <%= link_to 'Editar', edit_admin_customer_path(customer), class: 'btn btn-sm btn-outline-primary' %>
          <%= link_to 'Excluir', admin_customer_path(customer), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-sm btn-outline-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
