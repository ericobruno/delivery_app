<div class="card">
  <div class="card-body">
    <h2 class="card-title"><%= @customer.name %></h2>
    <h6 class="card-subtitle mb-2 text-muted">Telefone: <%= @customer.phone %></h6>
    <div class="mt-3">
      <%= link_to 'Editar', edit_admin_customer_path(@customer), class: 'btn btn-outline-primary' %>
      <%= link_to 'Excluir', admin_customer_path(@customer), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-outline-danger' %>
      <%= link_to 'Voltar', admin_customers_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
